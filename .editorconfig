#########################################################
#  Awesome Lists AsciiDoc Repository Template           #
#  https://github.com/tajmone/Awesome-List-Asciidoctor  #
#########################################################

root = true

## Repository Configurations
############################
[.{git*,editorconfig,*.yml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = unset
insert_final_newline = true
trim_trailing_whitespace = true

[.gitmodules]
indent_style = tab

[.{gitkeep,nojekyll}]
insert_final_newline = unset


## HTML and CSS
###############
[*.html]
charset = utf-8
end_of_line = unset
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true


## AsciiDoc
###########
[*.{ad,adoc,asc,asciidoc}]
indent_size = unset
indent_style = space
end_of_line = unset
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
; Exception for autogenerated file:
[./README.adoc]
insert_final_newline = false


## Ruby
#######
[{*.rb,*.gemspec,*.rake,Rakefile,rakefile}]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


## Shell Scripts
################
[*.sh]
end_of_line = lf
indent_style = tab
